#ifdef HAS_WINDOWS_FEATURES

  	for(i = 0; i <= strlen(pdfname); i++)
  	{
  		if(pdfname[i] == '/')  
		  {
  			pdfname[i] = '\\';
 		  }
  	}
    sprintf (cmd_str, "del %s", pdfname);
    Proc_err(INFO_OPT,"%s",cmd_str);

    /*write a dos batch file with the cmd_str and run it*/
    fbat = fopen(batfile, "w");
    fputs( cmd_str, fbat);
    fclose( fbat);
   //Show_status(cmd_str);
   system(batcmd);
		  
